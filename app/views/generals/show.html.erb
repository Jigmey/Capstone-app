<link rel="stylesheet" href="/css/styles-elegantblue.css" id="theme-styles">
<!--THIS IS IF/FRIENDS OR NOT STATEMENT-->

<%if current_user.friendships.where(user_id: current_user.id).where(friend_id: profile.id).length < 1 && current_user.id != profile.id %>
	<%=form_tag("/friendships/createfriend", method: :post) do%>
	  <%= hidden_field_tag(:friend_id, profile.id) %>
	  <%= submit_tag "Add"%>
	<%end%>
<%end%>  
<div class="profilecontainer">
	<div class="widewrapper main">
		<div class="container about">
		  <img src="<%=profile.pic%>" alt="Willy Wonka" style="width:100px;height:100px; float: left; margin-top: 0px; margin-left: 0px; border-radius: 180px">
		  <div class="about-button">
				<a class="btn btn-xlarge btn-tales-one" href="/friendships/<%=current_user.id%>">Friends List</a>
			</div>
			<div class="about-button">
				<!--IF USER IS IN GUILD OR NOT STATEMENT-->
				<%if profile.guilds.ids.first == nil%>
					<p><a href="/guilds/newguild">Create a guild</a></p>
					<p><a href="/guilds/joinguild">Join a guild</a></p>
				<%else%>
					<%profile.guilds.each do |guild|%>
						<h2><%=guild.name%></h2>
					<%end%>
				<%end%>
			</div>
		        <!--POST/COMMENTS FUNCTION-->
	   	<%if profile.id == current_user.id%>
				<div class="col-md-9 ">
          <article class=" blog-teaser">
            <header>
              <%= form_tag("/posts", method: :post) do %>
                <%= text_area :body, ""  %>
                <%= hidden_field_tag(:is_this_guild, "no")%>
                <%= hidden_field_tag(:is_this_profile, "yes")%>
                <%= hidden_field_tag(:id, profile.id)%>
                <%= hidden_field_tag(:current_user_id, current_user.id)%>
                <p><%= submit_tag "Post"%></p>
              <%end%>
            </header>
          </article>
        </div>
    	<%end%>
			<%@posts.each do |post|%>
				<div class="col-md-9">
		      <article class="blog-teaser">
		      	<header>
							<h3>Post</h3>
							<p><img src="<%=post.user.pic%>"alt="Willy Wonka" style="width:50px;height:50px; float: left; margin-top: 0px; margin-left: 0px; border-radius: 180px"><%=post.user.name%></p>
							<p><%=auto_link(post.text)%></p>
							<hr>
							<div class="comments">
								<%post.comments.each do |comment|%>
									<p>Username: <img src="<%=comment.user.pic%>" alt="Willy Wonka" style="width:50px;height:50px; float: left; margin-top: 0px; margin-left: 0px; border-radius: 180px"><%=comment.user.name%></p>
									<p>Comment</p>
									<p><%=auto_link(comment.text)%></p>
									<hr>
								<%end%>
							</div>	

							<%= form_tag("/comments", method: :post) do %>
								<%= text_area :body, ""  %>
								<%= hidden_field_tag(:post_id, post.id)%>
								<%= hidden_field_tag(:is_this_profile, "yes")%>
								<%= hidden_field_tag(:is_this_guild, "no")%>
								<%= hidden_field_tag(:id, profile.id)%>
								<!-- hidden tex tag showing current users and create a method-->
								<%= submit_tag "Comment"%>
							<%end%>
						</header>
					</article>
				</div>
			<%end%>
				<!--Need to fix old-pages-->				
		</div>
		<hr>
	</div>
	  
	<div class="container">
	  <div class="row">
	    <div class="col-md-6 col-md-offset-3 tales-superblock">
				<div class="paging">
				 <a href="/generals/<%=profile.id%>" class="newer"><i class="fa fa-long-arrow-left"></i> Main</a>
				 <span>&bull;</span>
				 <a href="/generals/<%=profile.id%>?page=<%=@page%>" class="older">Older<i class="fa fa-long-arrow-right"></i></a>
				</div>	        
	    </div>
	  </div>        
	</div>
</div>

