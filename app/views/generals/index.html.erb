                                      </div>

                                        <%@posts.each do |post|%>
                                              <div class="col-md-11 ">
                                                  <article class=" blog-teaser">
                                                      <header>
                                                          <div class="body">
                                                              <h3>Post</h3>
                                                              <p><%=post.id%></p>
                                                              <p><%=post.text%></p>
                                                              <hr>
                                                              
                                                              <div class="comments">
                                                                  <%post.comments[post.comments.size * 0.4..-1].each do |comment|%>
                                                                      <p>Username: <img src="<%=comment.user.pic%>" alt="Willy Wonka" style="width:50px;height:50px; float: left; margin-top: 0px; margin-left: 0px; border-radius: 180px"><%=comment.user.name%></p>
                                                                      <p><%=auto_link(comment.text)%></p>
                                                                      <hr>
                                                                  <%end%>
                                                              </div>

                                                              <%= form_tag("/comments", method: :post) do %>
                                                                  <%=  text_area :body, ""  %>
                                                                  <%= hidden_field_tag(:post_id, post.id)%>
                                                                  <%= submit_tag "Comment"%>
                                                              <%end%>
                                                          </div>
                                                      </header>
                                                  </article>
                                              </div>

                                          <%end%>
                                      <%end%>
