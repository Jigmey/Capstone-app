<%= form_tag("/users/create", method: :post) do %>
	<div>  
	  <%= label_tag(:username) %>
	  <%= text_field_tag(:name) %>
	</div>
	<div>
	  <%=label_tag(:birthdate)%>
	  <%=text_field_tag(:birthdate)%>
	</div>
	<div>
	  <%=label_tag(:Profile_pic)%>
	  <%=text_field_tag(:pic)%>
	</div>
	<div>
	  <%= label_tag(:password) %>
	  <%= password_field_tag(:password) %>
	</div>
	<div>    
	  <%= label_tag(:password_conformation) %>
	  <%= password_field_tag(:password_conformation) %>
	</div>
	<%= submit_tag "Create" %>
<% end %>
