<link rel="stylesheet" href="/css/styles-elegantblue.css" id="theme-styles">

<div class="loginstyle">
	<h2>Login</h2>
	<%= form_tag("/login/create", method: :post) do %>
		<div>  
		  <%= label_tag(:name) %>
		  <%= text_field_tag(:name) %>
		</div>
		<div>
		  <%= label_tag(:password) %>
		  <%= password_field_tag(:password) %>
		</div>
		<div>
			<%= submit_tag "Login"%>
		</div>
	<%end%>
</div>