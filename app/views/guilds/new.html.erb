<link rel="stylesheet" href="/css/styles-dark-yellow.css" id="theme-styles">

<div class="guildstyle">
	<h2>Create your Guild!</h2>
	<%=form_tag("/guilds/createguild", method: :post) do%>
		<div>
		  <%= label_tag(:name) %>
		  <%= text_field_tag(:name) %>	
		</div>	
		<div>
		  <%= label_tag(:description) %>
		  <%= text_field_tag(:description) %>	
		</div>
		<div>
		  <%= label_tag(:Image_Url) %>
		  <%= text_field_tag(:image_url) %>	
		</div>
		<%=hidden_field_tag(user_id: current_user.id)%>
		<div>
			<%= submit_tag "Create" %>
		</div>
	<%end%>
</div>