<%=form_tag("/guilds/createguild", method: :post) do%>
	<div>
	  <%= label_tag(:name) %>
	  <%= text_field_tag(:name) %>	
	</div>	
	<div>
	  <%= label_tag(:description) %>
	  <%= text_field_tag(:description) %>	
	</div>
	<%=hidden_field_tag(user_id: current_user.id)%>
	<div>
		<%= submit_tag "Create" %>
	</div>
<%end%>